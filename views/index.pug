extends layout

block content

  <!-- Search input -->

  input(id='myInput' type='text' placeholder='Search').form-control

  p

  <!-- Data table-->

  table.table.table-hover.table-bordered

    thead

      tr

        th Customer

        th Order Number

        th Order Date

        th Delivery Date

        th Delivery Plase

        th Action

      each order, index in result

        tbody(id='myTable')

          tr

            td #{order['CUSTOMER']}

            td #{order['ORDER'].NUMBER}

            td #{order['ORDER'].DATE}

            td #{order['ORDER'].DELIVERYDATE}

            td #{order['ORDER']['HEAD'][0]['DELIVERYPLACE'][0]}

            td
              div.dropdown
                a(href='#' data-toggle='dropdown').dropdown-toggle Action
                div.dropdown-menu
                  a(href='../createOrder/' + order['ORDER'].NUMBER).dropdown-item Create Order
                  a(href='../details/' + order['ORDER'].NUMBER).dropdown-item View details
                  a(href='#').dropdown-item Delete
